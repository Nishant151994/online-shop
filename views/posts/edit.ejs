<h1>Edit Posts!</h1>

<form action="/posts/<%= post.id %>?_method=PUT" method="POST">

	<div><input type="text" name="post[title]" placeholder="Title" values="<%= post.title %>"></div>
	<div><input type="text" name="post[price]" placeholder="Price" values="<%= post.price %>"></div>
	<div><textarea name="post[description]" placeholder="description"><%= post.description %></textarea></div>

	<div><input type="text" name="post[location]" placeholder="Location" values="<%= post.location %>"></div>

	<input type="submit">
</form>